rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /notes/{noteID} {
      allow read: if request.auth.uid == resource.data.noteUserID
      allow update, delete: if request.auth.uid == resource.data.noteUserID && request.auth.uid == request.resource.data.noteUserID
      allow create: if request.auth.uid == request.resource.data.noteUserID
    }
  }
}
